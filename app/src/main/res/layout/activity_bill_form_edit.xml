<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BillFormEditActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        android:gravity="center">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp"
            android:gravity="center">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#17202A"
                android:hint="Edit"
                android:layout_margin="@dimen/_5sdp"
                android:gravity="center"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edit_vender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/hinttextcolor"
                android:hint="Vender"
                android:layout_margin="@dimen/_5sdp"
                android:inputType="textPersonName"
                android:textColor="#17202A"/>


            <EditText
                android:id="@+id/edit_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/hinttextcolor"
                android:hint="Address"
                android:layout_margin="@dimen/_5sdp"
                android:inputType="textPersonName"
                android:textColor="#17202A"/>



            <EditText
                android:id="@+id/edit_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/hinttextcolor"
                android:hint="Date"
                android:layout_margin="@dimen/_5sdp"
                android:inputType="textPersonName"
                android:textColor="#17202A"/>



            <EditText
                android:id="@+id/edit_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/hinttextcolor"
                android:hint="Items"
                android:layout_margin="@dimen/_5sdp"
                android:inputType="textPersonName"
                android:textColor="#17202A"/>

            <EditText
                android:id="@+id/edit_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/hinttextcolor"
                android:hint="Amounts"
                android:layout_margin="@dimen/_5sdp"
                android:inputType="textPersonName"
                android:textColor="#17202A"/>

            <EditText
                android:id="@+id/edit_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/hinttextcolor"
                android:hint="Category"
                android:layout_margin="@dimen/_5sdp"
                android:inputType="textPersonName"
                android:textColor="#17202A"/>


            <Button
                android:id="@+id/edit_billSubmit"
                android:layout_width="@dimen/_190sdp"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:padding="10dp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColorHighlight="@color/highlist"
                android:textColor="@color/textwhite"
                android:background="@drawable/btnldesign"/>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>